{
  "name": "react-template",
  "version": "1.0.0",
  "description": "Template for Project with ReactJs, Typescript and TailwindCSS",
  "author": "Nando Salles",
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "tailwindcss",
    "husky",
    "prettier",
    "eslint"
  ],
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "lint-code": "tsc --noEmit && eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint-code:fix": "prettier --write src/**/*.{js,jsx,ts,tsx}",
    "lint-styles": "stylelint src/**/*.css",
    "lint-styles:fix": "stylelint --fix src/**/*.css",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn eslint --fix 'src/**/*.{ts,tsx,js,jsx}'",
      "yarn stylelint --fix src/**/*.css",
      "yarn test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --concurrent 4"
    }
  },
  "dependencies": {
    "@craco/craco": "^6.1.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "bcryptjs": "^2.4.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-react": "^7.14.5",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/postcss7-compat": "^2.1.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^9.8.6",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "git-commit-msg-linter": "^3.2.6",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "postcss": "^7.0.35",
    "prettier": "2.2.1",
    "react-test-renderer": "^17.0.2",
    "stylelint": "^13.13.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.1.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
